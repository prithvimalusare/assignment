extends layout

block content
    h1 #{title}
    form(method='POST' action='/student/edit/'+student._id)
        label(for='fname') Full Name:
        br
        input(type='text' name='fname' value = student.name)
        br
        label(for='dob') Date of birth:
        br
        input(type='date' name='dob' value = student.dob)
        br
        label(for='school') School:
        br
        select(id='school' name='school')
            option(value='School A') School A
            option(value='School B') School B
            option(value='School C') School C
        br
        label(for='class') Class:
        br
        select(id='class' name='class')
            option(value='1') 1
            option(value='2') 2
            option(value='3') 3
        br
        label(for='division') Division:
        br
        select(id='division' name='division')
            option(value='A') A
            option(value='B') B
            option(value='C') C
        br
        label(for='status') Status:
        br
        input(type='radio' name='status' value='Active' checked)
        |  Active
        input(type='radio' name='status' value='Inactive')
        |  Inactive
        br
        br
        br
        input(type='submit')